<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="AbsRoundImageView">
        <attr name="riv_borderWidth" format="dimension|reference"/>
        <attr name="riv_borderColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="riv_leftTopRadius" format="dimension|reference"/>
        <attr name="riv_rightTopRadius" format="dimension|reference"/>
        <attr name="riv_rightBottomRadius" format="dimension|reference"/>
        <attr name="riv_leftBottomRadius" format="dimension|reference"/>
    </declare-styleable>

</resources>
